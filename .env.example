# Domain MAX Environment Configuration
# Copy this file to .env and configure your settings

# ==============================================
# SECURITY SETTINGS (Required)
# ==============================================

# Database password - Use a strong password (minimum 12 characters)
DB_PASSWORD=your_secure_database_password_here

# JWT secret key - Use a strong random string (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# AES encryption key - Must be exactly 32 characters
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your_32_character_encryption_key_12

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Environment mode
ENVIRONMENT=production

# Application ports
APP_PORT=8080
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ==============================================
# DATABASE SETTINGS
# ==============================================

# Database configuration
DB_NAME=domain_manager
DB_USER=postgres
DB_PORT=5432
DB_SSL_MODE=require
DB_MAX_CONNECTIONS=25

# ==============================================
# SECURITY & AUTH SETTINGS
# ==============================================

# JWT token expiration
JWT_EXPIRES_IN=24h

# Bcrypt hashing cost (10-15 recommended)
BCRYPT_COST=12

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# EMAIL SETTINGS (Optional)
# ==============================================

# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=true

# ==============================================
# REDIS SETTINGS (Optional)
# ==============================================

# Redis configuration for caching
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==============================================
# BUILD SETTINGS
# ==============================================

# Build metadata
VERSION=1.0.0
BUILDTIME=$(date -u +%Y-%m-%dT%H:%M:%SZ)

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================

# Uncomment these for development
# ENVIRONMENT=development
# LOG_LEVEL=debug
# DB_SSL_MODE=disable
# CORS_ALLOWED_ORIGINS=*